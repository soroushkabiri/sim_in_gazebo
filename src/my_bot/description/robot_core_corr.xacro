<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro"  >

    <xacro:macro name="diffbot" params="prefix">


    <xacro:include filename="inertial_macros.xacro"/>
    
    <material name="white">
        <color rgba="1 1 1 1" />
    </material>

    <material name="orange">
        <color rgba="1 0.3 0.1 1" />
    </material>


    <material name="blue">
        <color rgba="0.2 0.2 1 1" />
    </material>


    <material name="red">
        <color rgba="1 0 0 1" />
    </material>


    
    <material name="black">
        <color rgba="0 0 0 1" />
    </material>

    <!-- Base link-->
    <link name="${prefix}base_link">

    </link>

    <!-- Base_Footprint Link-->

    <joint name="${prefix}base_footprint_joint" type="fixed">
        <parent link="${prefix}base_link" />
        <child link="${prefix}base_footprint" />
        <origin xyz= '0 0 0' rpy="0 0 0"/>
    </joint>

    <link name="${prefix}base_footprint">

    </link>


    <!-- chassi link-->
    <joint name="${prefix}chassis_joint" type="fixed">
        <parent link="${prefix}base_link" />
        <child link="${prefix}chassis" />
        <origin xyz= '-0.1 0 0'/>
    </joint>

    <link name="${prefix}chassis">
        <visual>
            <origin xyz="0.15 0 0.075" />
            <geometry>
                <box size="0.3 0.3 0.15"/>
            </geometry>
            <material name="white" />
        </visual>
        <collision>
            <origin xyz="0.15 0 0.075" />
            <geometry>
                <box size="0.3 0.3 0.15"/>
            </geometry>
        </collision>
        <xacro:inertial_box mass="3.0" x="0.3" y="0.3" z="0.15">
            <origin xyz="0.15 0 0.075" rpy="0 0 0"/>
        </xacro:inertial_box>
    </link>

    <gazebo reference="${prefix}chassis">
        <material>Gazebo/White</material>
    </gazebo>

    <!-- left wheel link-->

    <joint name="${prefix}left_wheel_joint" type="continuous">
        <parent link="${prefix}base_link"/>
        <child link="${prefix}left_wheel"/>
        <origin xyz="0 0.175 0" rpy="-${pi/2} 0 0"/>
        <axis xyz="0 0 1"/>
    </joint>

    <link name="${prefix}left_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.05" length='0.04'/>
            </geometry>
            <material name="blue"/>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.05" length='0.04'/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.1" length="0.04" radius="0.05">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>

    <gazebo reference="${prefix}left_wheel">
        <material>Gazebo/Blue</material>
    </gazebo>



    <!-- right wheel link-->

    <joint name="${prefix}right_wheel_joint" type="continuous">
        <parent link="${prefix}base_link"/>
        <child link="${prefix}right_wheel"/>
        <origin xyz="0 -0.175 0" rpy="${pi/2} 0 0"/>
        <axis xyz="0 0 -1"/>
    </joint>

    <link name="${prefix}right_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.05" length='0.04'/>
            </geometry>
            <material name="blue"/>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.05" length='0.04'/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.1" length="0.04" radius="0.05">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>

    <gazebo reference="${prefix}right_wheel">
        <material>Gazebo/Blue</material>
    </gazebo>


    <!-- caster wheel link-->
     
    <joint name="${prefix}caster_wheel_joint" type="fixed">
        <parent link="${prefix}chassis"/>
        <child link="${prefix}caster_wheel"/>
        <origin xyz="0.24 0 0"/>
    </joint>

    <link name="${prefix}caster_wheel">
        <visual>
            <geometry>
                <sphere radius="0.05"/>
            </geometry>
            <material name="black"/>
        </visual>
        <collision>
            <geometry>
                <sphere radius="0.05"/>
            </geometry>
        </collision>
        <xacro:inertial_sphere mass="0.1" radius="0.05">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_sphere>
    </link>

    <gazebo reference="${prefix}caster_wheel">
        <material>Gazebo/Black</material>
        <mu1 value="0.001"/>
        <mu2 value="0.001"/>

    </gazebo>


    <!-- revolute joint on top of robot (coupler)-->
    <joint name="${prefix}revolute_joint_robot_to_coupler" type="continuous">
        <parent link="${prefix}chassis"/>
        <child link="${prefix}coupler"/>
        <origin xyz="0.15 0 0.16" rpy="0 0 0"/>
        <axis xyz="0 0 1"/>
        <dynamics damping="0.001" friction="0.001"/>

    </joint>

    <link name="${prefix}coupler">
        <visual>
            <origin xyz="-0.1 0 0" />
            <geometry>
                <box size="0.2 0.05 0.005"/>
            </geometry>
            <material name="blue" />
        </visual>
        <collision>
            <origin xyz="-0.1 0 0" />
            <geometry>
                <box size="0.2 0.05 0.005"/>
            </geometry>
        </collision>
        <xacro:inertial_box mass="0.01" x="0.2" y="0.05" z="0.005">
            <origin xyz="-0.1 0 0" rpy="0 0 0"/>
        </xacro:inertial_box>
    </link>

    <gazebo reference="${prefix}coupler">
        <material>Gazebo/Blue</material>
    </gazebo>


    <!-- fixed joint on top of revtangular object -->
    <joint name="${prefix}revolute_joint_coupler_to_fixed" type="continuous">
        <parent link="${prefix}coupler"/>
        <child link="${prefix}fixed_link"/>
        <origin xyz="-0.2 0 0.015" rpy="0 0 0"/>
        <axis xyz="0 0 1"/>
        <dynamics damping="0.001" friction="0.001"/>

    </joint>

    <link name="${prefix}fixed_link">
        <visual>
            <origin xyz="-0.5 0 0" />
            <geometry>
                <box size="1 0.05 0.005"/>
            </geometry>
            <material name="red" />
        </visual>
        <collision>
            <origin xyz="-0.5 0 0" />
            <geometry>
                <box size="1 0.05 0.005"/>
            </geometry>
        </collision>
        <xacro:inertial_box mass="0.01" x="1" y="0.05" z="0.005">
            <origin xyz="-0.5 0 0" rpy="0 0 0"/>
        </xacro:inertial_box>
    </link>

    <gazebo reference="${prefix}fixed_link">
        <material>Gazebo/Red</material>
    </gazebo>



    <!--fixed point-->
    <!--joint name="${prefix}fixed_joint_robot" type="continuous">
        <parent link="${prefix}fixed_link"/>
        <child link="${prefix}fixed_point"/>
        <origin xyz= '-1.05 0 0' rpy="0 0 0"/>
        <axis xyz="0 0 1"/>
        <dynamics damping="100.0" friction="100.0"/>

    </joint>


    <link name="${prefix}fixed_point">
        <visual>
            <geometry>
                <cylinder radius="0.01" length='0.01'/>
            </geometry>
            <material name="red"/>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.01" length='0.01'/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.01" length="0.01" radius="0.01">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>

    <gazebo reference="${prefix}fixed_point">
        <material>Gazebo/Red</material>
    </gazebo-->









    </xacro:macro>

    

</robot>
